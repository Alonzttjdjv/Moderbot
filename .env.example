# Bot Platform - Переменные окружения

# База данных
DATABASE_URL=postgresql://user:password@localhost/botplatform

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://yourdomain.com/webhook/telegram

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# VK Bot
VK_BOT_TOKEN=your_vk_bot_token_here
VK_GROUP_ID=your_vk_group_id_here

# Веб-интерфейс
SECRET_KEY=your_secret_key_here
SESSION_TIMEOUT=3600

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/bot_platform.log

# Настройки приложения
DEBUG=true
HOST=0.0.0.0
PORT=8000