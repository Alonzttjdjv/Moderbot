# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Admin Configuration
ADMIN_IDS=123456789,987654321

# Database Configuration
DATABASE_PATH=./data/bot_database.db

# Logging Configuration
LOG_LEVEL=INFO

# Moderation Configuration
MAX_WARNINGS=3
AUTO_DELETE_SPAM=true
SPAM_THRESHOLD=5
FLOOD_PROTECTION=true

# Content Filters
CONTENT_FILTERS_BAD_WORDS=true
CONTENT_FILTERS_LINKS=true
CONTENT_FILTERS_CAPS=true
CONTENT_FILTERS_EMOJI_SPAM=true
CONTENT_FILTERS_LONG_MESSAGES=true
CONTENT_FILTERS_REPEATED_CHARS=true
CONTENT_FILTERS_NUMBER_SPAM=true
CONTENT_FILTERS_MAX_MESSAGE_LENGTH=1000

# Temporary Ban Durations (in seconds)
TEMP_BAN_DURATIONS_WARNING=0
TEMP_BAN_DURATIONS_MUTE_1=3600
TEMP_BAN_DURATIONS_MUTE_2=7200
TEMP_BAN_DURATIONS_BAN_1=86400
TEMP_BAN_DURATIONS_BAN_2=604800

# Statistics Configuration
STATS_ENABLED=true
STATS_RETENTION_DAYS=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# API Configuration
TELEGRAM_API_TIMEOUT=30
TELEGRAM_API_RETRIES=3

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Webhook Configuration (if using webhooks)
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=your_webhook_secret_here

# Proxy Configuration (if needed)
PROXY_ENABLED=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=300
METRICS_ENABLED=true